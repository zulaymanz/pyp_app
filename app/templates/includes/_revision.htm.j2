<h4>New revision</h4>
<div class="container">
  {% from fh import render_field %}
  <form method="post" class="mb-3 mx-auto" onSubmit="clearField();">
    {{ rform.csrf_token }}
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="subject">Subject</label>
        <input type="text" name="subject" readonly id="subject" class="form-control">
      </div>
      <div class="form-group col-md-6">
        <label for="grade">Grade <span class="text-danger">*</span></label>
        <select name="grade" id="grade" class="form-control">
          {% for grade in grades %}>
          <option value="{{grade.id}}">{{grade.grade_name}}</option>
          {% endfor %}
        </select>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="grade">Topic <span class="text-danger">*</span></label>
        <input name="topic" type="text" id="autocomplete" class="form-control"/>
      </div>
      <div class="form-group col-md-6">
        {{ rform.start_date.label }}
        {{ rform.start_date(class_="form-control") }}
        <small id="dateHelp" class="form-text text-muted">This will be the date the topic was taught.</small>
      </div>
    </div>
    <div class="form-group">
      {{ rform.notes.label }}
      {{ rform.notes(class_="form-control") }}
    </div>
    {{ rform.submit(class_="btn btn-primary mx-sm-2 mb-2") }}
  </form>
  {% for r in revisions %}
  <p>{{r.topic}}-{{r.subject}}-{{r.grade}}</p>
  {% endfor %}
</div>