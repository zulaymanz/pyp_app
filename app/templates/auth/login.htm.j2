{% extends "base.htm.j2" %}

{% block content %}
    <h1>Sign In</h1>
    <form action="{{ url_for('login') }}" method="POST">
        {{ form.hidden_tag() }}
        <div class="form-group">
            {{ form.username.label }}<br>
            {{ form.username(size=32, class_="form-control w-50") }}<br>
            {% for error in form.username.errors %}
                <span style="color: red;">[{{ error }}]</span>
            {% endfor %}
        </div>
        <div class="form-group">
            {{ form.password.label }}<br>
            {{ form.password(size=32, class_="form-control w-50") }}<br>
            {% for error in form.password.errors %}
                <span style="color: red;">[{{ error }}]</span>
            {% endfor %}
        </div>
        <div class="custom-control custom-checkbox">
        {{ form.remember_me(class_="custom-control-input") }} {{ form.remember_me.label(class_="custom-control-label") }}
        </div>
        <p>{{ form.submit(class_="btn btn-primary") }}</p>
    </form>
    <p>New User? <a href="{{ url_for('register') }}">Click to Register!</a></p>
{% endblock %}